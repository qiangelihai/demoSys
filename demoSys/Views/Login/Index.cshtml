<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/bootstrap-clearmin.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/roboto.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/font-awesome.min.css">
    <title>登录页</title>
    <style></style>
</head>
<body class="cm-login">
    <h1 class="col-xs-12" id="notice" style="color:red">@ViewBag.notice</h1>

    <div class="text-center" style="padding:90px 0 30px 0;background:#fff;border-bottom:1px solid #ddd">
        <img src="~/Content/assets/img/logo.png" width="440" height="110">
    </div>

    <div class="col-sm-6 col-md-4 col-lg-3" style="margin:40px auto; float:none;">
        <form method="post" id="myForm" onsubmit="return checkForm()" action="/Login/Index">
            <div class="col-xs-12">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-fw fa-user"></i></div>
                        <input type="text" id="userName" name="username" class="form-control" placeholder="用户名">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-fw fa-lock"></i></div>
                        <input type="password" id="pwd" name="password" class="form-control" placeholder="密码">
                    </div>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="checkbox"><label><input type="checkbox"> 记住密码</label></div>
            </div><div class="col-xs-6">
                <button type="submit" class="btn btn-block btn-primary">登录</button>
            </div>
        </form>
    </div>

    <script src="~/Scripts/jquery-3.4.1.js"></script>
    @*前端判断输入是否为空*@
    <script>
        //前端判断输入是否为空
        function checkForm() {
            var userName = $("#userName").val();
            var pwd = $("pwd").val();
            //alert(userName);//拿到值
            if (userName.length <= 0) {
                $("#notice").text("用户名不能为空！！");
                //不让表单往后执行
                return false;
            }
            if (pwd.length <= 0) {
                $("#notice").text("密码不能为空！！");
                //不让表单往后执行
                return false;
            }
            else
                return true;
        }
    </script>
</body>
</html>
