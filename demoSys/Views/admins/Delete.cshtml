@model demoSys.Models.admin

@{
    ViewBag.Title = "删除";
    Layout = "~/Views/Shared/_BackAdmin.cshtml";
}
<div class="container-fluid">
    <div class="row cm-flex-height">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <h3>&emsp;用户信息删除</h3>                
                <h3>&emsp;确定要删除么?</h3>
                <div>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            登录账号                           
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.username)
                        </dd>

                        <dt>
                            密码
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.password)
                        </dd>

                        <dt>
                            真实姓名                           
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.nickname)
                        </dd>

                        <dt>
                            权限（0-学生；1-教师）
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.power)
                        </dd>

                        <dt>
                            创建时间
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.createtime)
                        </dd>

                        <dt>
                            性别
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.sex)
                        </dd>

                        <dt>
                           学号
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.snumber)
                        </dd>

                        <dt>
                           院系
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.faculty)
                        </dd>

                    </dl>
                   
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="删除" style="color:red"/>
                            |
                            <button>@Html.ActionLink("返回", "Index")</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>